[sub_resource type="Shader" id=1]
code = "shader_type spatial;
//uniforms
uniform float wave_height;
uniform float freq;
//vars

//vertex script
void vertex(){
	float d = 0.0-VERTEX.z;
	VERTEX.y += cos(2.0+TIME*freq)*wave_height*d;
}
//fragment script
void fragment() {
	ALBEDO = COLOR.rgb;
}
"

